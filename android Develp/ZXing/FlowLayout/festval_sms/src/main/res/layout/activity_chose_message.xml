<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_chose_message"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyw.festval_sms.activity.ChoseMessageActivity">
    <ListView
        android:id="@+id/id_choosemessage_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--backgroundTint 背景色
    borderWidth解決在5.0以上沒有陰影-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/id_choosemessage_tosend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_to_send"
        app:backgroundTint="@color/main_color"
        app:borderWidth="0dp"
        android:layout_marginBottom="@dimen/fab_margin"/>
</RelativeLayout>
